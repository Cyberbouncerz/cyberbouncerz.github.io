  </div>

  <iframe
    name="hidden_iframe"
    style="display:none;"
    onload="if(submitted){
      document.getElementById('status').innerText = '✅ Message sent! Thank you.';
      document.getElementById('contact-form').reset();
      submitted=false;
    }">
  </iframe>

  <script>
    var submitted = false;
    var startTime;

    document.addEventListener('DOMContentLoaded', function() {
      startTime = new Date().getTime();
      document.getElementById('submissionTime').value = startTime;
    });

    document.getElementById('contact-form').addEventListener('submit', function (e) {
      const recaptcha = grecaptcha.getResponse();
      const delayTrap = document.getElementById('delayTrap').value;
      const submissionTime = parseInt(document.getElementById('submissionTime').value, 10);
      const endTime = new Date().getTime();
      const timeTaken = endTime - submissionTime;

      // Basic time delay check (adjust the threshold as needed)
      if (timeTaken < 500) { // Less than 0.5 seconds - likely a bot
        e.preventDefault();
        document.getElementById('status').style.display = 'block';
        document.getElementById('status').innerText = '🤖 Suspicious submission detected.';
        return false;
      }

      if (!recaptcha) {
        e.preventDefault();
        document.getElementById('status').style.display = 'block';
        document.getElementById('status').innerText = 'Please complete the reCAPTCHA.';
        return false;
      }

      if (delayTrap !== '') {
        e.preventDefault();
        document.getElementById('status').style.display = 'block';
        document.getElementById('status').innerText = '🤖 Spam detected.';
        return false;
      }

      submitted = true;
      document.getElementById('status').style.display = 'block';
      document.getElementById('status').innerText = '⏳ Sending...';
    });
  </script>

</body>
