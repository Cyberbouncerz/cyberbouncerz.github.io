<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Contact Us</title>
  <style>
    /* All your previous styles remain the same */
    .honeypot { display: none; }
  </style>
  <script src="https://www.google.com/recaptcha/api.js" async defer></script>
</head>
<body>

  <div class="form-container">
    <h1>Contact Us</h1>
    <form
      id="contact-form"
      method="POST"
      action="https://script.google.com/macros/s/AKfycby63HDvxXDvytSkS8_iKmDvsg-CZZDAb4rQshA4EzjUVqFLOA_c0EVLV-4lMYGSKeTJYQ/exec"
      target="hidden_iframe"
    >
      <input type="text" name="firstName" placeholder="First Name" required />
      <input type="text" name="lastName" placeholder="Last Name" required />
      <input type="text" name="company" placeholder="Company" required />
      <input type="email" name="email" placeholder="Your Email" required />
      <textarea name="message" placeholder="Your Message" rows="5" required></textarea>

      <!-- Honeypot field -->
      <input type="text" name="hiddenTrap" class="honeypot" />

      <div class="recaptcha-container">
        <div class="g-recaptcha" data-sitekey="6Ld_uBArAAAAAFvp-mMzrrqmv5QKlm8ye9hjTq01"></div>
      </div>

      <button type="submit">Send</button>
      <div id="status">Waiting for submission...</div>
    </form>
  </div>

  <iframe
    name="hidden_iframe"
    style="display:none;"
    onload="if(submitted){
      document.getElementById('status').innerText = '✅ Message sent! Thank you.';
      document.getElementById('contact-form').reset();
      submitted=false;
    }">
  </iframe>

  <script>
    var submitted = false;

    document.getElementById('contact-form').addEventListener('submit', function (e) {
      const recaptcha = grecaptcha.getResponse();
      const honeypot = document.querySelector('input[name="hiddenTrap"]').value;

      if (!recaptcha) {
        e.preventDefault();
        document.getElementById('status').style.display = 'block';
        document.getElementById('status').innerText = 'Please complete the reCAPTCHA.';
        return false;
      }

      if (honeypot !== '') {
        e.preventDefault();
        document.getElementById('status').style.display = 'block';
        document.getElementById('status').innerText = 'Spam detected.';
        return false;
      }

      submitted = true;
      document.getElementById('status').style.display = 'block';
      document.getElementById('status').innerText = '⏳ Sending...';
    });
  </script>

</body>
</html>
