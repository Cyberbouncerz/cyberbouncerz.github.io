      <div id="status">Waiting for submission...</div>
    </form>
  </div>

  <iframe
    name="hidden_iframe"
    style="display:none;"
    onload="if(submitted){ 
      document.getElementById('status').innerText = '✅ Message sent! Thank you.';
      document.getElementById('contact-form').reset(); 
      submitted=false; 
    }">
